<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".student_course_reg.StCourse5Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/Black"
        android:textSize="20dp"
        android:text="Course Registration"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/enroll"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/rbutton"
                android:layout_margin="15dp"
                android:hint=" Enter Enrollment Number"/>

            <EditText
                android:id="@+id/course1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/rbutton"
                android:layout_margin="10dp"
                android:text=" CO16405 - Mobile Application Development" />

            <EditText
                android:id="@+id/course2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/rbutton"
                android:layout_margin="10dp"
                android:text=" CO16403 - Advanced Database Technology" />

            <EditText
                android:id="@+id/course3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/rbutton"
                android:layout_margin="10dp"
                android:text=" IT16308 - Operating System" />

            <EditText
                android:id="@+id/course4"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/rbutton"
                android:layout_margin="10dp"
                android:text=" CO16404 - Web Page Development" />

            <EditText
                android:id="@+id/course5"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/rbutton"
                android:layout_margin="10dp"
                android:text=" CO16408 - Python" />

            <EditText
                android:id="@+id/course6"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/rbutton"
                android:layout_margin="10dp"
                android:text=" CO16301 - Project 1" />

            <Button
                android:id="@+id/CoursesubmitBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="UPLOAD"
                android:background="@drawable/rbutton"/>

        </LinearLayout>

    </ScrollView>

    </LinearLayout>

</ScrollView>